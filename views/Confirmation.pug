extends layout
block cssfiles 
    link(rel="stylesheet" href="/stylesheets/form.css")
block content
    .formcontainer
        -const action='/'+locals.type+'/'+id+'/delete'
        form(action=action method="post")
            span#error #{error}
            div Are You Sure You Want to perform a delete ?
            label(for="pass") Admin Password
            input(type="password" name='pass' id="pass" value=pass required)
            input(type="submit" value='Yes')
            a(href="/"+type class='cancel') No 